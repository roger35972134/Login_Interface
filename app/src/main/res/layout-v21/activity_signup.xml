<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    style="@style/AppTheme">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgID"
        android:src="@drawable/ic_account_circle_white_24dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgID"
        android:layout_alignBottom="@+id/imgID"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/signID"
        android:textColor="#fff"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPW"
        android:src="@drawable/ic_vpn_key_white_24dp"
        android:layout_alignBottom="@+id/signPW"
        android:layout_toLeftOf="@+id/signID"
        android:layout_toStartOf="@+id/signID" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgPW"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="200dp"
        android:id="@+id/signPW"
        android:textColor="#FFF"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgEmail"
        android:src="@drawable/ic_email_white_24dp"
        android:layout_alignBottom="@+id/signEmail"
        android:layout_toLeftOf="@+id/signPW"
        android:layout_toStartOf="@+id/signPW" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgEmail"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="20dp"
        android:layout_marginTop="250dp"
        android:id="@+id/signEmail"
        android:textColor="#FFF"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signEmail"
        android:id="@+id/imgCheck"
        android:src="@drawable/ic_check_circle_white_24dp"/>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/RogerTheme"
        />
</RelativeLayout>