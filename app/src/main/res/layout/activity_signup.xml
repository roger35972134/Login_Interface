<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:textSize="40dp"
        android:layout_above="@+id/Linear1"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FFF"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Linear2"
        android:layout_centerHorizontal="true"
        android:id="@+id/Linear1"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgID"
            android:src="@drawable/ic_account_circle_white_24dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/imgID"
            android:layout_alignBottom="@+id/imgID"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/signID"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:id="@+id/Linear2">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgPW"
            android:src="@drawable/ic_vpn_key_white_24dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/signPW"
            android:textColor="#FFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Linear2"
        android:id="@+id/Linear3"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgEmail"
            android:src="@drawable/ic_email_white_24dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/signEmail"
            android:textColor="#FFF"/>
    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Linear3"
        android:id="@+id/imgCheck"
        android:src="@drawable/ic_check_circle_white_24dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:id="@+id/returnpage"
        android:src="@drawable/ic_reply_white_24dp"/>
</RelativeLayout>