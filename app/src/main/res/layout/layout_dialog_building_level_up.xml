<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#222">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/side_nav_bar"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_gear_up"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level up"
            android:textSize="36sp"
            android:textColor="#00ffaa"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_abc"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelUpName"
            android:textSize="30dp"
            android:textColor="#00ffaa"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="10"
            android:id="@+id/levelUpPrice"
            android:textColor="#00ffaa"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cash"
            android:paddingBottom="3dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="#00ffaa"
        android:text="Level Up?"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar"
        >
        <ImageButton
            android:layout_weight="1"
            android:background="#222"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/levelUp_positive_button"
            android:src="@drawable/checked"
            android:layout_margin="2dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:background="#222"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:id="@+id/levelUp_negative_button"
            android:src="@drawable/cancel"/>
    </LinearLayout>

</LinearLayout>